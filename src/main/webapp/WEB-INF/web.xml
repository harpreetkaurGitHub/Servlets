<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
    <welcome-file>hello.html</welcome-file>
  </welcome-file-list>

  <display-name>getParameterdemo</display-name>
  <servlet>
    <servlet-name>getHeadInfo</servlet-name>
    <servlet-class>CreateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getHeadInfo</servlet-name>
    <url-pattern>/addServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>updateUser</servlet-name>
    <servlet-class>UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateUser</servlet-name>
    <url-pattern>/updateServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>product</servlet-name>
    <servlet-class>Product</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>product</servlet-name>
    <url-pattern>/ProductServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>RequestDispacher.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>homeServlet</servlet-name>
    <servlet-class>RequestDispacher.HomeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>homeServlet</servlet-name>
    <url-pattern>/homeServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteUser</servlet-name>
    <servlet-class>DeleteUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteUser</servlet-name>
    <url-pattern>/deleteServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getparameter</servlet-name>
    <servlet-class>CreateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getparameter</servlet-name>
    <url-pattern>/getParameterurl</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>tannu</servlet-name>
    <servlet-class>HelloWorld</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>tannu</servlet-name>
    <url-pattern>/HelloWorld</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Create</servlet-name>
    <servlet-class>CreateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Create</servlet-name>
    <url-pattern>/CreateServletUrl</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>sourceServlet</servlet-name>
    <servlet-class>Sessions.SourceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sourceServlet</servlet-name>
    <url-pattern>/sourceServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>targetServlet</servlet-name>
    <servlet-class>Sessions.TargetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>targetServlet</servlet-name>
    <url-pattern>/targetServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HeadInfo</servlet-name>
    <servlet-class>HeadInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HeadInfo</servlet-name>
    <url-pattern>/HeadInfo</url-pattern>
  </servlet-mapping>

  <context-param>
    <param-name>DBUSER</param-name>
    <param-value>pankaj</param-value>
  </context-param>
  <context-param>
    <param-name>DBPWD</param-name>
    <param-value>password</param-value>
  </context-param>
  <context-param>
    <param-name>DBURL</param-name>
    <param-value>jdbc:mysql://localhost/mysql_db</param-value>
  </context-param>

  <listener>
    <listener-class>Listners.AppContext</listener-class>
  </listener>
</web-app>


